{
    "openapi": "3.0.0",
    "info": {
        "title": "ApiBileMo",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api/v1",
            "description": "Api for Phones Catalog in B2B"
        }
    ],
    "paths": {
        "/customers": {
            "get": {
                "tags": [
                    "Customer"
                ],
                "operationId": "App\\Controller\\CustomerController::index",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "/customers?page=2"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de clients",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CustomersList"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Customer"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CustomerEdit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Création d'un client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le client a été ajouté avec succès !"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        },
        "/customers/{id}": {
            "get": {
                "tags": [
                    "Customer"
                ],
                "operationId": "App\\Controller\\CustomerController::show",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informations client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "put": {
                "tags": [
                    "Customer"
                ],
                "operationId": "App\\Controller\\CustomerController::update",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CustomerEdit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Modification des informations client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le client a été modifié avec succès !"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Customer"
                ],
                "operationId": "App\\Controller\\CustomerController::delete",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Supression d'un client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le client a été supprimé avec succès !"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        },
        "/phones": {
            "get": {
                "tags": [
                    "Phone"
                ],
                "operationId": "App\\Controller\\PhoneController::index",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "/phones?page=2"
                    },
                    {
                        "name": "brand",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "/phones?brand=samsung"
                    },
                    {
                        "name": "price",
                        "in": "query",
                        "description": "Syntaxe : /phones?price=[Xmin, Xmax] ou ?price=[Xmin]",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "/phones?price=[500,1000]"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de téléphones mobiles",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PhonesList"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/phones/{id}": {
            "get": {
                "tags": [
                    "Phone"
                ],
                "operationId": "App\\Controller\\PhoneController::show",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Détails du téléphone",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phone"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CustomersList": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Customer": {
                "properties": {
                    "adress": {
                        "type": "string"
                    },
                    "postCode": {
                        "type": "integer"
                    },
                    "city": {
                        "type": "string"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Phone"
                        }
                    }
                },
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CustomersList"
                    }
                ]
            },
            "CustomerEdit": {
                "properties": {
                    "adress": {
                        "type": "string"
                    },
                    "postCode": {
                        "type": "integer"
                    },
                    "city": {
                        "type": "string"
                    }
                },
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CustomersList"
                    }
                ]
            },
            "PhonesList": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "price": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "Phone": {
                "properties": {
                    "description": {
                        "type": "string"
                    }
                },
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/PhonesList"
                    }
                ]
            }
        },
        "responses": {
            "NotFound": {
                "description": "La ressource n'existe pas.",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "La ressource n'existe pas."
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "parameters": {
            "id": {
                "name": "id",
                "in": "path",
                "description": "ID de la ressource",
                "required": true,
                "schema": {
                    "type": "integer"
                }
            }
        }
    }
}