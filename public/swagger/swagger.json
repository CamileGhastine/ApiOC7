{
    "openapi": "3.0.0",
    "info": {
        "title": "ApiBileMo",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api/v1",
            "description": "Api for Phones Catalog in B2B"
        }
    ],
    "paths": {
        "/customers": {
            "get": {
                "operationId": "App\\Controller\\CustomerController::index",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "/customers?page=2"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de clients",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CustomersList"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/customers/{id}": {
            "get": {
                "operationId": "App\\Controller\\CustomerController::show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la ressource",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Phone details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/phones": {
            "get": {
                "operationId": "App\\Controller\\PhoneController::index",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "/phones?page=2"
                    },
                    {
                        "name": "brand",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "/phones?brand=samsung"
                    },
                    {
                        "name": "price",
                        "in": "query",
                        "description": "Syntaxe : /phones?price=[Xmin, Xmax] ou ?price=[Xmin]",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "/phones?price=[500,1000]"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de téléphones mobiles",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PhonesList"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/phones/{id}": {
            "get": {
                "operationId": "App\\Controller\\PhoneController::show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la ressource",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Phone details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phone"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CustomersList": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Customer": {
                "properties": {
                    "adress": {
                        "type": "string"
                    },
                    "PostCode": {
                        "type": "integer"
                    },
                    "city": {
                        "type": "string"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Phone"
                        }
                    }
                },
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CustomersList"
                    }
                ]
            },
            "PhonesList": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "price": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "Phone": {
                "properties": {
                    "description": {
                        "type": "string"
                    }
                },
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/PhonesList"
                    }
                ]
            }
        }
    }
}